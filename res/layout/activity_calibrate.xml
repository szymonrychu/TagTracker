<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="simple.as.fuck.objecttrackerv2.recognizer.RecognizeActivity" >


        <RelativeLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            tools:ignore="UselessParent" >

	        <com.richert.tagtracker.elements.CameraDrawerPreview
	            android:id="@+id/calibrate_preview"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom|center_horizontal" >
	        </com.richert.tagtracker.elements.CameraDrawerPreview>

	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentBottom="true"
	            android:layout_alignParentLeft="true"
	            android:layout_alignParentRight="true" >

	            <Button
	                android:id="@+id/butt_calibrate_addframe"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.50"
	                android:text="@string/calibrate_activity_addframe" />

	            <Button
	                android:id="@+id/butt_calibrate_process"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="0.50"
	                android:text="@string/calibrate_activity_process" />
	        </LinearLayout>

        </RelativeLayout>



</FrameLayout>
