<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="simple.as.fuck.objecttrackerv2.recognizer.RecognizeActivity" >


        <RelativeLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            tools:ignore="UselessParent" >

	        <com.richert.tagtracker.elements.CameraDrawerPreview
	            android:id="@+id/recognize_preview"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom|center_horizontal" >
	        </com.richert.tagtracker.elements.CameraDrawerPreview>

            <Button
                android:id="@+id/screenshot_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="@string/recognize_button_screenshot" />

        </RelativeLayout>



</FrameLayout>
